<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

    <ImageView
            android:id="@+id/fileexplorer_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fileexplorer_splitView"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/fileexplorer_icon">
        <TextView
                android:id="@+id/fileexplorer_title1"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <!--<TextView-->
                <!--android:visibility="gone"-->
                <!--android:id="@+id/fileexplorer_title2"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:paddingLeft="0dp"-->
                <!--android:gravity="center_vertical|left"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
    </LinearLayout>

    <CheckBox
            android:id="@+id/fileexplorer_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_above="@+id/fileexplorer_splitView"/>

    <LinearLayout
        android:id="@+id/fileexplorer_splitView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>

